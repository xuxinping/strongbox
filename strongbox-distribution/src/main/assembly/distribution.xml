<assembly>
    <id>distribution</id>

    <formats>
        <format>tar.gz</format>
        <format>zip</format>
    </formats>
    <files>
        <file>
            <source>src/main/resources/META-INF/LICENSE</source>
            <outputDirectory>strongbox-${project.version}</outputDirectory>
        </file>
    </files>
    <fileSets>
        <fileSet>
            <directory>target/assembly/strongbox-${project.version}/etc</directory>
            <outputDirectory>strongbox-${project.version}/etc</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>target/assembly/strongbox-${project.version}/lib</directory>
            <outputDirectory>strongbox-${project.version}/lib</outputDirectory>
            <fileMode>0755</fileMode>
            <includes>
                <include>strongbox-web-core-*-spring-boot.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>target/assembly/strongbox-${project.version}/logs</directory>
            <outputDirectory>strongbox-${project.version}/logs</outputDirectory>
            <fileMode>0744</fileMode>
        </fileSet>
        <fileSet>
            <directory>target/assembly/strongbox-${project.version}/bin</directory>
            <outputDirectory>strongbox-${project.version}/bin</outputDirectory>
            <includes>
                <include>strongbox</include>
            </includes>
            <fileMode>0755</fileMode>
            <lineEnding>unix</lineEnding>
        </fileSet>
        <fileSet>
            <directory>target/assembly/strongbox-${project.version}/bin</directory>
            <outputDirectory>strongbox-${project.version}/bin</outputDirectory>
            <includes>
                <include>strongbox.bat</include>
            </includes>
            <fileMode>0755</fileMode>
            <lineEnding>dos</lineEnding>
        </fileSet>
        <fileSet>
            <directory>target/assembly/strongbox-${project.version}/tmp</directory>
            <outputDirectory>strongbox-${project.version}/tmp</outputDirectory>
            <fileMode>0744</fileMode>
        </fileSet>
        <fileSet>
            <directory>target/assembly/strongbox-vault</directory>
            <outputDirectory>strongbox-vault</outputDirectory>
            <fileMode>0755</fileMode>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
